	<character class='mal' name='mal' sx='-29' sy='-48' sWidth='58' sHeight='96' width='30' height='30' sheet='mal_sheet' state='walkFront' facing='Front'></character>
	
	<action class='bemal' name='Be Mal.' command='macro'>
